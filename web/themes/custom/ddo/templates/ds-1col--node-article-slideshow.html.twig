{% if content.field_target_url.0 is empty or content.field_target_url.0 == "" %}
  {% set url_destination = path('entity.node.canonical', {'node': content['#node'].id()  }) %}
{% else %}
  {% set url_destination = content.field_target_url.0 %}
{% endif %}
<{{ ds_content_wrapper }}{{ attributes.addClass('ds-1col', 'clearfix') }}>

{{ title_suffix.contextual_links }}

<section class="custom-slide">
  <a class="link-zoom" href="{{ url_destination }}">
    <div class="zoom-img-and-title">
      {% if node.field_banner_image.entity.field_media_image is not empty  %}
        <div>{{ drupal_image(node.field_banner_image.entity.field_media_image.entity.uri.value, 'slideshow', {responsive: true}) }}</div>
      {% endif %}
      <h3><span>Zoom sur</span> {{ node.label }}</h3>
    </div>
    <div><button class="btn btn-more">Plus d'infos</button></div>
  </a>
</section>


</{{ ds_content_wrapper }}>
